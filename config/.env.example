# OvernightPredict Configuration Example
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Providers
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ENABLED=true
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORGANIZATION_ID=

# DeepSeek Configuration
DEEPSEEK_API_KEY=your-deepseek-key-here
DEEPSEEK_ENABLED=false
DEEPSEEK_MODEL=deepseek-coder

# Claude/Anthropic Configuration
CLAUDE_API_KEY=sk-ant-your-anthropic-key-here
CLAUDE_ENABLED=true
CLAUDE_MODEL=claude-3-opus-20240229
CLAUDE_RATE_LIMIT_WAIT=true

# =============================================================================
# Context Sharing (Optional)
# =============================================================================

# Enable context sharing across sessions
CONTEXT_ENABLED=false
CONTEXT_SHARING_TYPE=file  # file, cloud_bucket, redis

# File-based sharing
CONTEXT_SHARED_PATH=.overnight/shared

# Cloud bucket sharing (S3)
# CONTEXT_BUCKET_NAME=my-bucket
# CONTEXT_BUCKET_PREFIX=overnight-predict/
# AWS_REGION=us-east-1

# Redis sharing
# CONTEXT_REDIS_URL=redis://localhost:6379

# =============================================================================
# Prediction Configuration
# =============================================================================

# Accuracy threshold for considering a prediction correct
PREDICTION_ACCURACY_THRESHOLD=0.7

# Number of questions to predict ahead
PREDICTION_LOOKAHEAD_COUNT=5

# Minimum accuracy before strategy switch
PREDICTION_MIN_ACCURACY_FOR_KEEP=0.6

# Evaluation window size
PREDICTION_EVALUATION_WINDOW=10

# Semantic similarity model
PREDICTION_SIMILARITY_MODEL=all-MiniLM-L6-v2

# =============================================================================
# Orchestrator Configuration
# =============================================================================

# Maximum concurrent sessions
ORCHESTRATOR_MAX_SESSIONS=10

# Session timeout in seconds
ORCHESTRATOR_SESSION_TIMEOUT=3600

# Health check interval in seconds
ORCHESTRATOR_HEALTH_CHECK_INTERVAL=30

# Auto-recovery on failure
ORCHESTRATOR_AUTO_RECOVERY=true

# =============================================================================
# Application Settings
# =============================================================================

# Application name
APP_NAME=OvernightPredict

# Debug mode
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Working directory for storage
WORK_DIR=.overnight
